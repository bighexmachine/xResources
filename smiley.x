


val framebuff = #7FF0;

proc main() is
  var s;
{ s := [ #b0000001111000000
       , #b0000111111110000
       , #b0001111001111000
       , #b0011100110011100
       , #b0111011111101110
       , #b0110111111110110
       , #b1111111111111111
       , #b1111111111111111
       , #b1111111111111111
       , #b1111111111111111
       , #b0111001111001110
       , #b0111001111001110
       , #b0011111111111100
       , #b0001111111111000
       , #b0000111111110000
       , #b0000001111000000
       ];
  smile(s)
}

proc smile(array s) is
  var n;
{ n := 0;
  while n < 16 do
  { framebuff[n] := s[n];
    n := n + 1
  }
}



