proc displayLetter(array s) is 
{
  copyImage(s);
  delay();
  clear();
  delay()
}


proc copyImage(array s) is
  var n;
{ 
  n := 0;
  while n < 16 do
  { 
    framebuff[15-n] := s[n];
    n := n + 1
  }
}

proc clear() is
  var n;
{ 
  n := 0;
  while n < 16 do
  { 
    framebuff[n] := 0;
    n := n + 1
  }
}

proc delay() is
